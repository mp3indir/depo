if($LatestSql = $mysqli->query("SELECT * FROM media WHERE active=1 ORDER BY id DESC LIMIT 9")){

while ($LatestRow = mysqli_fetch_array($LatestSql)){
	
	$MediaType = $LatestRow['type'];
	
	$longTitle = stripslashes($LatestRow['title']);
	$strTitle = strlen ($longTitle);
	if ($strTitle > 30) {
	$MediaTitle = substr($longTitle,0,30).'...';
	}else{
	$MediaTitle = $longTitle;}
	
	$MediaLink = preg_replace("![^a-z0-9]+!i", "-", $longTitle);
	$MediaLink = strtolower($MediaLink);
	
?>
<div class="MediaThumbs">
<?php if($MediaType=='1'){?> 
<a href="picture-<?php echo $LatestRow['id'];?>-<?php echo $MediaLink;?>.html"><img class="thumbs" alt="<?php echo stripslashes($LatestRow['title']);?>" src="timthumb.php?src=http://<?php echo $settings['siteurl'];?>/uploads/<?php echo $LatestRow['image'];?>&amp;h=168&amp;w=220&amp;q=100" /></a>
<?php }else{ ?>
<a href="video-<?php echo $LatestRow['id'];?>-<?php echo $MediaLink;?>.html"><img class="thumbs" alt="<?php echo stripslashes($LatestRow['title']);?>" src="timthumb.php?src=<?php echo $LatestRow['image'];?>&amp;h=168&amp;w=220&amp;q=100" /></a>
<a href="video-<?php echo $LatestRow['id'];?>-<?php echo $MediaLink;?>.html"><div class="PlayButton"><img src="templates/<?php echo $settings['template'];?>/images/play.png" alt="Play Video" width="60" height="60"></div></a>
<?php }?>

<div class="DivTitle"><?php echo $MediaTitle;?></div>
</div><!--MediaThumbs-->
<?php     
	}
$LatestSql->close();
